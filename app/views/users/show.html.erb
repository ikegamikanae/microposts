<div class="row">
  <aside class="col-md-4">
    <%= render 'side' %>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <%= page_entries_info(@microposts) %>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
    <%= paginate @microposts %>
  </div>
</div>